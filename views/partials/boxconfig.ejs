<!-- NEW BOX -->
<div class="row" data-ng-controller="BoxCtrl as vm">
    <section class="col-md-10">
        <div class="box skin-box <%= Skin.box%>">
            <div class="box-header with-border">
                <h3 class="box-title">test</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <section class="col-md-7 connectedSortable"></section>
                    <section class="col-md-5 connectedSortable"></section>
                </div>
            </div>
        </div>
    </section>
    
    <section class="col-md-2">
        <div class="box skin-box <%= Skin.box%>">
            <div class="box-header with-border">
                <h3 class="box-title">test</h3>
            </div>
            <div class="box-body">
                <div class="col-md-12 connectedSortable">

                    <div class="box-header" ng-repeat="boxType in vm.boxTypes track by boxType.id" style="cursor: move">
                        <div class="callout callout-success box-sortable">
                            <h4>{{boxType.title}}</h4>
                            <p>Box preview</p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
</div>
<!-- END OF BOX -->    